<!DOCTYPE html>
<html>
<head>
    <title>LlcJobboard</title>
    <%= stylesheet_link_tag "application", media: "all", "data-turbolinks-track" => true %>
    <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
    <%= csrf_meta_tags %>
</head>
<body>

<div class="container">
    <header>
        <div class="row"></div>
        <div class="row">
            <ul class="nav nav-pills xs-col-12 pull-right">
                <li><a href="/">Home</a></li>
                <li><a href="#">Another Link</a></li>
            </ul>
        </div>
    </header>

    <% if user_signed_in? %>
    Welcome <%= current_user.email %> <%= link_to('Logout?', destroy_user_session_path, :method => :delete) %>
    <% else %>
    <%= link_to('Register', new_user_registration_path) %>
    <% end %>

    <% if employer_signed_in? %>
    Welcome <%= current_employer.email %> <%= link_to('Logout?', destroy_user_session_path, :method => :delete) %>
    <% end %>

    <% if employer_signed_in? %>
    Employer logged in
    <% end %>

    <%= yield %>

</div>

</body>
</html>
