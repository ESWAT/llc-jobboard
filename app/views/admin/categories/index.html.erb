<%= simple_form_for(@category, :html => { :class => 'form-horizontal' }, url: admin_categories_path, method: :post ) do |f| %>
<%= f.input :name, label_html: { class: 'col-sm-2' }, input_html: { class: 'form-control' } %>
<div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
        <%= f.button :submit, class: 'btn btn-primary' %>
    </div>
</div>
<% end %>

<div class="list-group">
    <% @categories.each do |category| %>
      <li><%= category.name %></li>
    <% end %>
</div>
