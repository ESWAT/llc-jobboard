<%= simple_form_for(@job_post, :url => url) do |f| %>
<%= f.input :title, input_html: { class: 'form-control' } %>
<%= f.input :company, input_html: { class: 'form-control' } %>
<%= f.input :description, as: :ckeditor, input_html: { class: 'form-control' } %>
<%= f.input :how_to_apply, as: :ckeditor, input_html: { class: 'form-control' } %>
<%= f.input :due_date, label: "Expiry Date", input_html: { class: 'form-control date-fragment' } %>
<%= f.input :category_id, as: :select, collection: @categories, input_html: { class: 'form-control date-fragment' }  %>
<%= f.input :job_type_id, as: :select, collection: @job_types, input_html: { class: 'form-control date-fragment' }  %>
<%= f.input :tag_list, label: "Tags (separated by commas) - Some examples: html, rails, css3", input_html: { class: 'form-control' } %>
<%= f.input :city, input_html: { class: 'form-control' } %>
<%= f.country_select :country, ['Canada', 'United States'], {}, class: 'form-group form-control date-fragment' %>

<br>

<div class="form-group">
    <%= f.button :submit, class: 'btn btn-primary' %>
</div>
<% end %>
