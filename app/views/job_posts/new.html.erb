<%= simple_form_for(@job_post, :html => { :class => 'form-horizontal' }) do |f| %>
  <%= f.input :title, input_html: { class: 'form-control' } %>
  <%= f.input :description, input_html: { class: 'form-control' } %>
  <%= f.input :due_date, input_html: { class: 'form-control' } %>
