<%= simple_form_for(@job_post) do |f| %>
<%= f.input :title, input_html: { class: 'form-control' } %>
<%= f.input :description, input_html: { class: 'form-control' } %>
<div class="help-block">
    <p>Feel free to use markdown in the description. Here are the basics. See the <a href="http://daringfireball.net/projects/markdown/syntax">complete syntax.</a></p>
    <ul>
        <li>Heading: ##Example heading</li>
        <li>List item: *Example list item</li>
        <li>Italic text: _Example italic text_</li>
        <li>Bold text: __Example bold text__</li>
        <li>Link: [Example link](http://example.com)</li>
    </ul>
</div>
<%= f.input :due_date, input_html: { class: 'form-control date-fragment' } %>
<%= f.input :category_id, as: :select, collection: @categories, input_html: { class: 'form-control date-fragment' }  %>
<%= f.input :tag_list, label: "Tags (separated by commas)", input_html: { class: 'form-control' } %>
<div class="form-group">
    <%= f.button :submit, class: 'btn btn-primary' %>
</div>
<% end %>
